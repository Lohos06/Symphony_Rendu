{% extends 'base.html.twig' %}

{% block title %}Liste des Genres{% endblock %}

{% block body %}
    <h1>Liste des Genres</h1>

    {% if genres is empty %}
        <p>Aucun genre trouv√©.</p>
    {% else %}
        <ul>
            {% for genre in genres %}
                <li>{{ genre.nom }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    {# Bouton visible uniquement pour ADMIN #}
    {% if app.session.get('role') == 'admin' %}
        <a href="{{ path('app_genre_add') }}">Ajouter un genre</a>
    {% endif %}
{% endblock %}
