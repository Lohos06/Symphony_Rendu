{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
<h1>Liste des livres</h1>

<ul>
    {% for livre in livres %}
        <li>{{ livre.titre }} - {{ livre.auteur.name }} ({{ livre.genre.name }})</li>
    {% endfor %}
</ul>

<a href="{{ path('app_livre_add') }}">Ajouter un livre</a>

{% endblock %}
